<div class="contact_wrapper">
<dl>
<%= form_for(@contact, url: confirm_path) do |f| %>
  <div class="form-group">
    <dt><%= f.label :name, 'お名前',class:"required" %></dt>
    <dd><%= f.text_field :name, autofocus: true, class: 'form-control',autocomplete:"off" %></dd>
  </div>
  <div class="form-group">
    <dt><%= f.label :email, 'メールアドレス', class:"required" %></dt>
    <dd><%= f.text_field :email, autofocus: true, class: 'form-control',autocomplete:"off" %></dd>
  </div>
  <div class="form-group">
    <dt><%= f.label :message, 'メッセージ', class:"required" %></dt>
    <dd><%= f.text_area :message, size: '10x5', class: 'form-control',autocomplete:"off" %></dd>
  </div>
  </dl>
  <div class="form-group">
    <%= f.submit '入力内容確認',class: "myButton" %>
  </div>
<% end %>
</div>
